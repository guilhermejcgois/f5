<aside class="sidebar">
    <ul class="sidebar__menu">
        <li id="dashboard-link" class="sidebar__menu-item uppercase">
            <a href="#" data-route="/dashboard">Dashboard</a>
        </li>
        <li id="bins-link" class="sidebar__menu-item uppercase">
            <a href="#" data-route="/dashboard/bins">Minhas bins</a>
        </li>
        <li id="requests-link" class="sidebar__menu-item uppercase">
            <a href="#" data-route="/dashboard/requests">Meus pedidos</a>
        </li>
        <li id="gathering-link" class="sidebar__menu-item uppercase">
            <a href="#" data-route="/dashboard/gathering">Coletas</a>
        </li>
    </ul>
    <div class="sidebar__footer">
        <a href="http://somosf5.com.br/" target="_blank" aria-label="Abrir website de Somos F5" class="btn-sm btn--secondary-ghost uppercase">Ir para o site</a>
        <div class="sidebar__social-menu">
            <a href="https://www.facebook.com/somosf5oficial/" target="_blank" aria-label="Abrir página no facebook" class="ic ic-sm ic-facebook pointer"></a>
            <a href="https://www.instagram.com/somos_f5/" target="_blank" aria-label="Abrir perfil no instagram" class="ic ic-sm ic-instagram pointer"></a>
            <a href="https://twitter.com/somos_f5" target="_blank" aria-label="Abrir perfil no twitter" class="ic ic-sm ic-twitter pointer"></a>
            <a href="https://www.linkedin.com/company/somosf5/" target="_blank" aria-label="Abrir página no linkedin" class="ic ic-sm ic-linkedin pointer"></a>
        </div>
    </div>
</aside>
<script>
    document.querySelectorAll('.sidebar__menu-item a').forEach(a => {
        a.addEventListener('click', function (e) {
            __f5__.router.navigate(e.target.dataset.route);
            e.target.parentElement.classList.add('active');
        });
    });
    const activeMenuItem = '#<%= page%>-link';
    const li = document.querySelector(activeMenuItem);
    if (li) {
        li.classList.add('active');
    }
</script>