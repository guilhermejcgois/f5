<header class="header">
    <div class="header__title">
        <h2 class="dashboard-title"><%= title %></h2>
    </div>
    <% if (!hideActions) {%>
        <div class="header__actions-wrapper text-6">
            <% if (canAdd) { %>
                <a id="new-bin-link" href="#" data-route="/dashboard/bins/cadastrar" class="btn-md btn--primary capitalize">Solicitar Bin</a>
            <% } else { %>
                <button id="new-bin-link" class="btn-md btn--inactive capitalize" disabled>Solicitar Bin</button>
            <% } %>
        </div>
    <% } %>
</header>